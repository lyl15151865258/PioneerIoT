<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_settingGuide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_5"
                android:text="@string/SettingInstructions"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:drawableEnd="@mipmap/ic_arrow_right"
                android:drawableRight="@mipmap/ic_arrow_right"
                android:gravity="center" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/gray_slight" />

        <LinearLayout
            android:id="@+id/ll_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">

            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_5"
                android:text="@string/UnitOfMeasurement"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:drawableEnd="@mipmap/ic_arrow_right"
                android:drawableRight="@mipmap/ic_arrow_right"
                android:gravity="center" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/gray_slight" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/gray_6"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_10"
                android:text="@string/LatestDataQuerySettings"
                android:textSize="@dimen/sp_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_meter_size"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableStart="@mipmap/icon_meter_size"
                    android:gravity="center_vertical"
                    android:text="@string/NominalDiameterRange"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:text="DN"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_sizeRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_white"
                    android:ems="5"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:text="1000~1000"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_slight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@drawable/selector_list_item_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_search_mode"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableStart="@mipmap/icon_search_mode"
                    android:gravity="center_vertical"
                    android:text="@string/QueryMode"
                    android:textSize="@dimen/sp_16" />

                <com.pioneeriot.pioneeriot.widget.SegmentControlView
                    android:id="@+id/scv_searchMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    app:scv_FrameCornerRadius="@dimen/dp_5"
                    app:scv_FrameWidth="1dp"
                    app:scv_Gradient="true"
                    app:scv_SegmentPaddingHorizontal="@dimen/dp_5"
                    app:scv_SegmentPaddingVertical="@dimen/dp_5"
                    app:scv_SelectedIndex="0"
                    app:scv_TextArray="@array/segment_search_mode_arrays"
                    app:scv_TextSize="@dimen/sp_16" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_slight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@drawable/selector_list_item_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_time_range"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableStart="@mipmap/icon_time_range"
                    android:gravity="center_vertical"
                    android:text="@string/TimeRange"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_timeRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_white"
                    android:ems="4"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:text="30"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:text="@string/days"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_slight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@drawable/selector_list_item_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_items_page"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableStart="@mipmap/icon_items_page"
                    android:gravity="center_vertical"
                    android:text="@string/ItemsPerPage"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_rows"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_white"
                    android:ems="4"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:text="1000"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_5"
                    android:text="@string/items"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/gray_slight" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/gray_6"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_10"
                android:text="@string/HistoricalDataQuerySettings"
                android:textSize="@dimen/sp_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@drawable/selector_list_item_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_time_select_mode"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableStart="@mipmap/icon_time_select_mode"
                    android:gravity="center_vertical"
                    android:text="@string/TimeMode"
                    android:textSize="@dimen/sp_16" />

                <com.pioneeriot.pioneeriot.widget.SegmentControlView
                    android:id="@+id/scv_timeMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    app:scv_FrameCornerRadius="@dimen/dp_5"
                    app:scv_FrameWidth="1dp"
                    app:scv_Gradient="true"
                    app:scv_SegmentPaddingHorizontal="@dimen/dp_5"
                    app:scv_SegmentPaddingVertical="@dimen/dp_5"
                    app:scv_SelectedIndex="0"
                    app:scv_TextArray="@array/segment_time_mode_arrays"
                    app:scv_TextSize="@dimen/sp_16" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_slight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@drawable/selector_list_item_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_data_show_mode"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableStart="@mipmap/icon_data_show_mode"
                    android:gravity="center_vertical"
                    android:text="@string/DataDisplayMode"
                    android:textSize="@dimen/sp_16" />

                <com.pioneeriot.pioneeriot.widget.SegmentControlView
                    android:id="@+id/scv_showDataMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    app:scv_FrameCornerRadius="@dimen/dp_5"
                    app:scv_FrameWidth="1dp"
                    app:scv_Gradient="true"
                    app:scv_SegmentPaddingHorizontal="@dimen/dp_5"
                    app:scv_SegmentPaddingVertical="@dimen/dp_5"
                    app:scv_SelectedIndex="0"
                    app:scv_TextArray="@array/segment_show_data_mode_arrays"
                    app:scv_TextSize="@dimen/sp_16" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/gray_slight" />

        <Button
            android:id="@+id/btn_exit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/red_400"
            android:text="@string/Logout"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />

    </LinearLayout>

</ScrollView>
